@page
@model Training_Unaiit.Areas_Faculty_Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>FacultyTable</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FacultyTable.Id" />
            <div class="form-group">
                <label asp-for="FacultyTable.Name" class="control-label"></label>
                <input asp-for="FacultyTable.Name" class="form-control" />
                <span asp-validation-for="FacultyTable.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacultyTable.Capacity" class="control-label"></label>
                <input asp-for="FacultyTable.Capacity" class="form-control" />
                <span asp-validation-for="FacultyTable.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacultyTable.Founded" class="control-label"></label>
                <input asp-for="FacultyTable.Founded" class="form-control" />
                <span asp-validation-for="FacultyTable.Founded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacultyTable.Creator" class="control-label"></label>
                <input asp-for="FacultyTable.Creator" class="form-control" />
                <span asp-validation-for="FacultyTable.Creator" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="SchoolId" class="form-label"></label>
                <div>
                    @Html.DropDownListFor(m => m.FacultyTable.SchoolId, @Model.allSchool, new { @class = "form-control" })
                </div>
                <span asp-validation-for="SchoolId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
